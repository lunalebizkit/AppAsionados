<div id="formulario" class="container">
    <form id="formequipo" method="POST" action="/paginas/crearEquipoFutbol/{{user.idUsuarios}}">
        <div class="row">
            <div id="semiTransparente" class="col-5 m-auto py-3 px-3 ">
                <div class="card">
                    <div class="card-header">
                        <h1  class=" mt-3 text-center py-2">CREA TU EQUIPO</h1>
                    </div>
                    <div class="card-body">
                        <div class="input-group mb-3 py-2">
                            <input type="text" class="form-control" name="nombreEquipo" placeholder="Nombre del equipo" autofocus required>
                            
                        </div>
                        <div class="input-group mb-2 justify-content-between py-2">
                            <select name="posicion" class="btn btn-ls btn-outline-primary" required>
                                <option type="text" value="">POSICIÃ“N</option>
                                <option type="text" value="Arquero">Arquero</option>
                                <option type="text" value="Defensor">Defensor</option>
                                <option type="text" value="MedioCampo">Medio campo</option>
                                <option type="text" value="Delantero">Delantero</option>
                            </select>
                            
                            <select name="idDeportes" class="btn btn-ls btn-outline-primary" required>
