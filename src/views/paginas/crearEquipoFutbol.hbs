                                <option type="number" value="1">Futbol 5</option>
                                <option type="number" value="2">Futbol 7</option>
                                <option type="number" value="3">Futbol 11</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div id="semiTransparente" class="col-5 m-auto py-3">
                <button type="submit" class="btn btn-success btn-block">
                    Crear
                </button>
                <button onclick="location.href='/paginas/futbol/{{user.idUsuarios}}'" class="btn btn-danger btn-block">
                    Cancelar
                </button>
            </div>
        </div>
    </form>
    
</div>

