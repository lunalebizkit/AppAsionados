<div id="cancha">
    <div class="container-fluid">
        <div class="col-lg-5 mx-auto p-3">
            {{#each nombre}}
            <div class="card text-center">
                <h2>Día no laboral</h2>
                <h2>"{{nombreEstablecimiento}} - {{numeroCancha}}"</h2>
            </div>
            {{/each}}
            <div id="semiTransparente" class="text-white">
                <form action="/paginas/cancha/{{idEstablecimiento}}" method="POST" enctype="multipart/form-data" onsubmit="return verificar();">
                    
                    <div class="container m-2 ">
                        <span style="color: white">*</span>
                        <label class="mt-3 mb-5" for="fecha"><b>Elije un día:</b></label>
                        <input id="fecha" type="date" name="fecha" required>
                    </div>
                    <div class="container m-2">
                        <textarea cols="40" rows="7" maxlength="100" minlength="4" placeholder="* Describe la razón del cierre" required></textarea>
                    </div>
                    <span><hr class="dropdown-divider"></span>
                    <div class="col-5 mx-auto">
                        <button type="submit" class="btn btn-success btn-block">
                            Cargar
                        </button>
                        
                        <a href="javascript: history.go(-1)" type="button" class="btn btn-danger btn-block">
                            Cancelar
                        </a>
                    </div>
                    <div class="p-2">
                        <span style="color: white;">*</span>
                        <span style="color: rgb(255, 255, 255);">Datos Obligatorios</span> 
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>