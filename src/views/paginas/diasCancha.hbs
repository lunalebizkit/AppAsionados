<div id="cancha">
    <div class="container-fluid">
        <div class="d-flex p-3">
            <div id="semiTransparente" class="col-lg-9 m-auto p-3">
                  {{#each cancha}}
                <div class="card">                  
                    <h3 class="mt-3 text-center">{{nombreEstablecimiento}}- Cancha Nº {{numeroCancha}} - {{deporte}}</h3>
                </div>
                <div class="row row-cols-2">
                    <div class="col-lg-8 m-0 mt-4 py-4">
                        <img src="/img/descarga/{{img}}" width="620">                        
                    </div>
                    <div class="card col-lg-3 m-4 mt-5 py-3">
                        <i for="nombreUsuario"><b>Dirección: </b>{{direccion}}</i>
                        <br>
                        <i for="nombreUsuario"><b>Horario: </b>De {{horaInicio}}hs a {{horaFin}}hs</i>    <br>                                          
                     {{/each}}
                        <i for="nombre"><b>Días disponible: </b>{{nombre}}</i>
                        {{#each dias}}
                        <ul>
                            <li>{{diaDetalle}}</li>
                        </ul>
                        {{/each}}
                    </div>
                </div>
                {{#each detalle}}
                    <ul class="col-6 text-white">
                        <li><p>Día no laboral:&nbsp;{{fecha}}</p><p>Detalle:&nbsp;{{detalle}}</p></li>
                    </ul>
                {{/each}}
            </div>
        </div>
        <div class="col-2  p-2">
            <a  href="javascript: history.go(-1)" type="button" class="btn btn-primary">Volver</a>
        </div>
    </div>
</div>