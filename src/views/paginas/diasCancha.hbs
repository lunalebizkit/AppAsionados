<div id="cancha">
    <div class="container-fluid">
        <div class="d-flex p-3">
            <div id="semiTransparente" class="col-lg-9 m-auto p-4 px-2">
                  {{#each cancha}}
                <div class="card">                  
                    <h3 class="mt-3 text-center">{{nombreEstablecimiento}}- Cancha Nº {{numeroCancha}} - {{deporte}}</h3>
                </div>
                <div class="row row-cols-2">
                    <div class="col-lg-8 m-0 mt-4 py-4">
                        <img src="/img/descarga/{{img}}" width="620">                        
                    </div>
                    <div class="card col-lg-3 m-4 mt-5 py-5">
                        <i for="nombreUsuario"><b>Dirección: </b>{{direccion}}</i>
                        <br>
                        <i for="nombreUsuario"><b>Horario: </b>De {{horaInicio}}hs a {{horaFin}}hs</i>    <br>                                          
                     {{/each}}
                        <i for="nombre"><b>Días disponible: </b>{{nombre}}</i>
                        {{#each dias}}
                        <ul>
                            <li>{{diaDetalle}}</li>
                        </ul>
                        {{/each}}
                    </div>
                </div>
                <div class="row">
                    <div class="container mx-auto">
                    <h3 class="text-white text-center">Como llegar?</h3>
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3350.0621439159754!2d-68.81690598523679!3d-32.89652517668179!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x967e0e1cd30665a9%3A0x265d7e8690d67cc7!2sBodegas%20y%20Vi%C3%B1edos%20Amadeo%20Mara%C3%B1on!5e0!3m2!1ses-419!2sar!4v1636312851161!5m2!1ses-419!2sar" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-2  p-2">
            <a  href="javascript: history.go(-1)" type="button" class="btn btn-primary">Volver</a>
        </div>
    </div>
</div>