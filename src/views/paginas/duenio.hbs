<div id="cancha">
    <div class="container-fluid pt-5">
        <div class="row justify-content-between">
            <div id="tablaEquipo" class="col-md-8 m-auto py-3">
                <div class="navbar-brand">
                    <a class="navbar-brand">
                        <a class="btn btn-dark btn-lg dropdown-toggle text-white" href="#" id="dropdown04"
                            data-bs-toggle="dropdown" aria-expanded="false">ESTABLECIMIENTO</a>
                        <ul class="dropdown-menu" aria-labelledby="dropdown04">
                            <li><a class="dropdown-item" href="establecimiento">Agregar Establecimiento</a></li>
                        </ul>
                    </a>
                     <a class="navbar-brand">
                        <a class="btn btn-dark btn-lg dropdown-toggle text-white" href="#" id="dropdown04"
                            data-bs-toggle="dropdown" aria-expanded="false">RESERVAS</a>
                        <ul class="dropdown-menu" aria-labelledby="dropdown04">
                            {{#each canchas}}
                            <li><a class="dropdown-item" href="reservaEstablecimiento/{{idEstablecimiento}}">{{nombreEstablecimiento}}</a></li>
                            {{/each}}
                        </ul>
                    </a>
                </div>
                <div id="scroll">
                    <table class="table table-hover table-info">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Dirección</th>
                                <th>Cuit</th>                                   
                                <th>Opción</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each canchas}}
                            <tr>
                                <td data-bs-toggle="tooltip" data-bs-placement="top" title="{{email}}">{{nombreEstablecimiento}}
                                </td>
                                <td><a >{{direccion}}</a></td>
                                <td><a >{{cuit}}</a></td>
                                <td><b><a class="link link-success" href="cancha/{{idEstablecimiento}}">Agregar Cancha</a></b>
                                <br>
                                <b><a class="link link-primary" href="misCanchas/{{idEstablecimiento}}">Mis Canchas</a></b></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-2  p-4">
        <a id="volver" href="/paginas/inicio" type="button" class="btn btn-primary">Volver</a>
    </div>
    
</div>