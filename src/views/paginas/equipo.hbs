<div class="container">
    <table class="table table-dark table-striped">
        <thead class="table-danger">
            <h2 class="text-center" style="color: aquamarine;">{{club}}</h2>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Posicion</th>
        </thead>
        <tbody>
            {{#each equipo}}
            <tr>
                <td>{{nombre}}</td>
                <td>{{apellido}}</td>
                <td>{{posicion}}</td>                
            </tr>
                {{/each}}            
        </tbody>
    </table>
    {{#unless pertenezco}}
    <h3 style="color: yellowgreen;">Queres Sumarte al equipo?</h3>
    <form action="/paginas/ingresarAlEquipo/{{numero}}&{{idDeportes}}" method="get">
         <div class="input-group mb-3">
                    <label for="nombre" class="text-black m-2 "><b> ELEGIR POSICIÃ“N:</b></label>
                    <select name="posicion" class="btn btn-ls btn-success" required>
                        <option type="text" value="">Opciones</option>
                        <option type="text" value="Arquero">Arquero</option>
                        <option type="text" value="Defensor">Defensor</option>
                        <option type="text" value="MedioCampo">Medio campo</option>
                        <option type="text" value="Delantero">Delantero</option>
                    </select>
