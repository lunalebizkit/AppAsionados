<div id="futbol">
    <div class="d-flex justify-content-around">
        <div class="container-fluid">
            <div id="tablaEquipo" class="col-md-10 m-2 p-2">
                <form class="d-flex">
                    <img class="rounded mx-auto d-block" src="/img/pelotaF.png" alt="" width="50" height="50">
                    <h2 class=" me-4"><b>EQUIPOS</b></h2>
                    <div class="d-flex m-2">
                        <input class="form-control" type="search" placeholder="Buscar equipo" aria-label="Search">
                        <button class="btn btn-danger me-3" type="submit">Ir</button>
                        <input class="form-control" type="search" placeholder="Buscar jugador" aria-label="Search">
                        <button class="btn btn-danger" type="submit">Ir</button>
                    </div>
                </form>
                <table class="table table-hover table-info">
                    <thead>                        
                        <tr>
                            <th>Nº de Equipo</th>
                            <th>Nombre</th>
                            <th>Deporte</th>                                
                        </tr> 
                    </thead>                                
                    <tbody>
                        {{#each equipos}}
                        <tr>
                            <td>#</td>
                            <td>{{nombreEquipo}}</td>
                            <td>{{deporte}}</td>
                        </tr>
                        {{/each}}                    
                    </tbody>                
                </table>
            </div>
        </div>
        {{#if miEquipo}}
        <div class="container-fluid">
            <div id="tablaEquipo" class="col-md-10 m-2 p-1">
                {{!-- {{#each miEquipo}} --}}
                <form class="d-flex">
                    <h2 class=" me-4"><b>MI EQUIPO</b></h2>
                    <h3><i>{{nombreEquipo}}</i></h3>
                </form>
                <table class="table table-hover table-success ">
                    <thead>
                        <tr>
                            <th>Número</th>
                            <th>Nombre</th>
                            <th>Posición</th>                                
                        </tr> 
                    </thead>                                
                    <tbody>
                        {{#each miEquipo}}
                        <tr>
                            <td>{{nombreEquipo}}</td>                            
                            <td>{{nombreUsuario}}</td>
                            <td>{{posicion}}</td>                        
                        </tr>  
                         {{/each}}                                
                    </tbody>
                </table>
               
            </div>
        </div>
        {{else}}
        <div class="col-6 my-5">
           <h3><a class="text-white" href="/paginas/crearEquipoFutbol/{{user.idUsuarios}}">Crea tu Equipo!</a></h3> 
        </div>
        {{/if}}
    </div>
    <div class="container">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button class="btn btn-danger" type="submit">Buscar cancha</button>
        </div>
    </div>
</div> 
       