<script src="bootstrap.bundle.min.js"></script>
<div id="futbol">
    <div class="d-flex justify-content-around">
        <div class="container-fluid">
            <div class="row justify-content-between">
                <div id="tablaEquipo" class="col-md-6 m-2 p-2">
                    <form class="d-flex">
                        <img class="rounded mx-2 d-block" src="/img/pelotaF.png" alt="" width="50" height="50">
                        <a class="navbar-brand" href="#">
                            <h2 class=" me-3"><b>EQUIPOS</b></h2>
                        </a>
                        
                        <div class="d-flex justify-content-between m-auto ">
                            <div class="btn-group" role="group" aria-label="Basic outlined example">
                                <button type="button" class="btn btn-primary">Jugadores</button>
                            </div>
                            <div class="btn-group" role="group" aria-label="Basic outlined example">
                                <a type="button" class="btn btn-success"href="/paginas/crearEquipoFutbol/{{user.idUsuarios}}">Crear Equipo</a>
                                <button type="button" class="btn btn-success"data-bs-toggle="modal" data-bs-target="#misEquipo" data-bs-whatever="@equipo">Mis Equipos</button>
                              
                            </div>
                        </div>
                        
                    </form>
                    <div id="scroll">
                        <table id="tablaScroll" class="table table-hover table-info">
                            <thead>
                                <tr>
                                    <th>Capitan</th>
                                    <th>Nombre</th>
                                    <th>Deporte</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each equipos}}
                                <tr>
                                    <td data-bs-toggle="tooltip" data-bs-placement="top" title="{{email}}">{{nombreUsuario}}
                                    </td>
                                    <td><a href="/paginas/equipo/{{nombreEquipo}}">{{nombreEquipo}}</a></td>
                                    <td>{{deporte}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
    <div class="col-2  p-3">
        <a href="/paginas/deporte" type="button" class="btn btn-dark">Volver</a>
    </div>
    
</div>
<!-- The Modal -->
<div class="modal fade" id="misEquipo" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">

            <!-- Modal Header -->
            <div class="modal-header" id="misEquipo">
                <h4 class="modal-title">MIS EQUIPOS</h4>
                <button type="button" class="close" data-bs-dismiss="modal" id="crearEquipo">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body" id="misEquipo">
                <table class="table text-center">
                    <tbody>
                        {{#each misEquipos}}
                        <tr>
                            <td><i>
                                    <h4><a href="/paginas/miEquipo/{{nombreEquipo}}">{{nombreEquipo}}</a></h4>
                                </i></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

            </div>
            <!-- Modal footer -->
            <div class="modal-footer" id="crearEquipo">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

