<div id="futbol">
    <div class="d-flex justify-content-around">
        <div class="container-fluid">
            <div id="tablaEquipo" class="col-md-10 m-2 p-2">
                <form class="d-flex">
                    <img class="rounded mx-auto d-block" src="/img/pelotaF.png" alt="" width="50" height="50">
                    <h2 class=" me-4"><b>EQUIPOS</b></h2>
                    <div class="d-flex m-2">
                        <input class="form-control" type="search" placeholder="Buscar equipo" aria-label="Search">
                        <button class="btn btn-danger me-3" type="submit">Ir</button>
                        <input class="form-control" type="search" placeholder="Buscar jugador" aria-label="Search">
                        <button class="btn btn-danger" type="submit">Ir</button>
                    </div>
                </form>
                <table class="table table-hover table-info">
                    <thead>
                        <tr>
                            <th>NÂº de Equipo</th>
                            <th>Nombre</th>
                            <th>Deporte</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each equipos}}
                        <tr>
                            <td>#</td>
                            <td>{{nombreEquipo}}</td>
                            <td>{{deporte}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="container-fluid">
            <div class="col-6 m-2">
                <a class="btn btn-primary btn-lg" href="/paginas/crearEquipoFutbol/{{user.idUsuarios}}">Crea tu Equipo!</a>
            </div>
            <div class="col-6 m-2">
                <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#misEquipo"
                    data-bs-whatever="@equipo">Mis Equipos</button>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button class="btn btn-danger" data-toggle="modal" type="submit">Buscar cancha</button>
        </div>
    </div>
</div>
<!-- The Modal -->
<div class="modal fade" id="misEquipo" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">

            <!-- Modal Header -->
            <div class="modal-header" id="misEquipo">
                <h4 class="modal-title">MIS EQUIPOS</h4>
                <button type="button" class="close" data-bs-dismiss="modal" id="crearEquipo">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body" id="misEquipo">
                <table class="table text-center">
                    <tbody>
                        {{#each misEquipos}}
                        <tr>
                            <td><i><h4><a href="/paginas/miEquipo/{{nombreEquipo}}">{{nombreEquipo}}</a></h4></i></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

            </div>
            <!-- Modal footer -->
            <div class="modal-footer" id="crearEquipo">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
