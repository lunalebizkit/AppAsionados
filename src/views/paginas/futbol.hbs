<div id="futbol">
    <div class="container-fluid">
        <div class="row justify-content-between">
            <!--Tabla Equipos-->
            <div id="tablaEquipo" class="col-lg-5 m-2 p-2">
                <div class="d-flex">
                    <img class="d-inline-block " src="/img/app/pelotaF.png" alt="" width="50" height="50">
                    <a class="navbar-brand">
                        <a class="btn btn-dark btn-lg dropdown-toggle text-white" href="#" id="dropdown04"
                            data-bs-toggle="dropdown" aria-expanded="false">EQUIPOS</a>
                        <ul class="dropdown-menu" aria-labelledby="dropdown04">
                            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#misEquipo"
                                    data-bs-whatever="@equipo">Mis Equipos</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="/paginas/crearEquipoFutbol/{{user.idUsuarios}}">Crear
                                    Equipo</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="/paginas/jugadores/{{user.idUsuarios}}">Ver Jugadores</a>
                            </li>
                        </ul>
                    </a>
                    <div class="d-flex justify-content-between m-auto ">
                        <input id="busqueda" type="text" class="form-control" placeholder="Buscar" onkeyup="buscar();"
                            autofocus>
                        <button class="btn btn-danger" id="boton">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>

                </div>
                <div id="scroll">
                    <table class="table table-hover table-info">
                        <thead class="fixed">
                            <tr>
                                <th>Capitán</th>
                                <th>Nombre</th>
                                <th>Deporte</th>
                            </tr>
                        </thead>
                        <tbody id="tblEquipos">

                            {{#each equipos }}
                            <tr id="texto">
                                <td  data-bs-toggle="tooltip" data-bs-placement="top" title="{{email}}">
                                    {{nombreUsuario}}
                                </td>
                                <td><a href="/paginas/equipo/{{nombreEquipo}}&{{idDeportes}}">{{nombreEquipo}}</a>
                                </td>
                                <td>{{deporte}}</td>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>

            <!--Tabla Canchas-->
            <div id="tablaEquipo" class="col-lg-6 m-2 p-2">
                <form class="d-flex">
                    <a class="navbar-brand" href="#">
                        <h4 class=" text-white px-4"><b>ESTABLECIMIENTOS</b></h4>
                    </a>
                    <div class="d-flex justify-content-between m-auto ">
                        <input id="busqueda1" type="text" class="card-filter" placeholder="Buscar" onkeyup="buscar1();" autofocus>
                        <button class="btn btn-danger" type="reset" id="boton">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
                <div id="scroll">
                    <table class="table table-hover table-info">
                        <thead class="fixed">
                            <tr>
                                <th>Establecimiento</th>
                                <th>Dirección</th>
                                <th>Deporte</th>
                            </tr>
                        </thead>
                        <tbody id="tblCancha">
                            {{#each canchas}}
                            <tr>
                                <td data-bs-toggle="tooltip" data-bs-placement="top" title="{{email}}">
                                    <a href="/paginas/verCancha/{{idEstablecimiento}}">{{nombreEstablecimiento}}</a>
                                </td>
                                <td>{{direccion}}</td>
                                <td>#</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
    <div class="col-2  p-4">
        <a id="volver" href="/paginas/deporte" type="button" class="btn btn-danger">Volver</a>
    </div>

</div>
<!-- The Modal -->
<div class="modal fade" id="misEquipo" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">

            <!-- Modal Header -->
            <div class="modal-header" id="misEquipo">
                <h4 class="modal-title">MIS EQUIPOS</h4>
                <button type="button" class="close" data-bs-dismiss="modal" id="crearEquipo">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body" id="misEquipo">
                <table class="table text-center">
                    <tbody>
                        {{#if misEquipos}}
                        {{#each misEquipos}}
                        <tr>
                            <td><i>
                                    <h4><a class="text-white"
                                            href="/paginas/miEquipo/{{nombreEquipo}}">{{nombreEquipo}}</a></h4>
                                </i></td>
                        </tr>
                        {{/each}}
                        {{else}}
                        <h4>
                            <p class="text-white text-center">Aún no tienes equipo</p>
                        </h4>
                        <h5 class="text-center"><a href="/paginas/crearEquipoFutbol/{{user.idUsuarios}}"><em>Crea tu
                                    propio Equipo!</em></a></h5>
                        {{/if}}
                    </tbody>
                </table>

            </div>
            <!-- Modal footer -->
            <div class="modal-footer" id="crearEquipo">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function buscar() {
        var tabla = document.getElementById('tblEquipos');
        var busqueda = document.getElementById('busqueda').value.toLowerCase();
        var cellsOfRow = " ";
        var found = false;
        var compareWith = " ";
        for (var i = 0; i < tabla.rows.length; i++) {
            cellsOfRow = tabla.rows[i].getElementsByTagName('td')
            found = false;
            for (var j = 0; j < cellsOfRow.length && !found; j++) {
                compareWith = cellsOfRow[j].innerHTML.toLowerCase();
                if (busqueda.length == 0 || (compareWith.indexOf(busqueda) > -1)) {
                    found = true;
                }
            }
            if (found) {
                tabla.rows[i].style.display = '';
                
            } else {
                tabla.rows[i].style.display = 'none';  
            }
         
        }  
    }
    function buscar1() {
        var tabla = document.getElementById('tblCancha');
        var busqueda = document.getElementById('busqueda1').value.toLowerCase();
        var cellsOfRow = " ";
        var found = false;
        var compareWith = " ";
        for (var i = 0; i < tabla.rows.length; i++) {
            cellsOfRow = tabla.rows[i].getElementsByTagName('td')
            found = false;
            for (var j = 0; j < cellsOfRow.length && !found; j++) {
                compareWith = cellsOfRow[j].innerHTML.toLowerCase();
                if (busqueda.length == 0 || (compareWith.indexOf(busqueda) > -1)) {
                    found = true;
                }
            }
            if (found) {
                tabla.rows[i].style.display = '';
            } else {
                tabla.rows[i].style.display = 'none';
            }
        }
    }
</script>
