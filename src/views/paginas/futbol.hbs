<div id="futbol">
    <div class="d-flex justify-content-around">
        <div class="container-fluid">
            <div id="tablaEquipo" class="col-md-6 m-2 p-2">
                <form class="d-flex">
                    <img class="rounded mx-auto d-block" src="/img/pelotaF.png" alt="" width="50" height="50">
                    <h2 class=" me-4"><b>EQUIPOS</b></h2>
                    <div class="d-flex m-2">
                        <input class="form-control" type="search" placeholder="Buscar equipo" aria-label="Search">
                        <button class="btn btn-danger me-3" type="submit">Ir</button>
                        <input class="form-control" type="search" placeholder="Buscar jugador" aria-label="Search">
                        <button class="btn btn-danger" type="submit">Ir</button>
                    </div>
                </form>
                <table class="table table-hover table-info">
                    <thead>
                        <tr>
                            <th>Capitan</th>
                            <th>Nombre</th>
                            <th>Deporte</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each equipos}}
                        <tr>
                            <td data-bs-toggle="tooltip" data-bs-placement="top" title="{{email}}">{{nombreUsuario}}
                            </td>
                            <td><a href="/paginas/equipo/{{nombreEquipo}}">{{nombreEquipo}}</a></td>
                            <td>{{deporte}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="sidebar col-2 p-1">
            <button type="button" class="btn btn-info btn-block text-dark" data-bs-toggle="modal" data-bs-target="#misEquipo"
                data-bs-whatever="@equipo">Mis Equipos</button>
            <a class="btn btn-info btn-block text-dark" href="/paginas/crearEquipoFutbol/{{user.idUsuarios}}">Crea tu
                Equipo!</a>
            <button class="btn btn-info btn-block text-dark" data-toggle="modal" type="submit">Buscar cancha</button>
        </div>

    </div>
</div>


<a href="/paginas/deporte" type="button" class="btn btn-primary">Volver</a>
</div>

<!-- The Modal -->
<div class="modal fade" id="misEquipo" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">

            <!-- Modal Header -->
            <div class="modal-header" id="misEquipo">
                <h4 class="modal-title">MIS EQUIPOS</h4>
                <button type="button" class="close" data-bs-dismiss="modal" id="crearEquipo">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body" id="misEquipo">
                <table class="table text-center">
                    <tbody>
                        {{#each misEquipos}}
                        <tr>
                            <td><i>
                                    <h4><a href="/paginas/miEquipo/{{nombreEquipo}}">{{nombreEquipo}}</a></h4>
                                </i></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

            </div>
            <!-- Modal footer -->
            <div class="modal-footer" id="crearEquipo">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>