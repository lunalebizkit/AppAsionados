<div id="cancha">
    <div class="container-fluid">
        <div class="card text-center mb-4">
            <h2 class="mb-3 mx-auto">HISTORIAL RESERVAS</h2>
        </div>
        <div id="scrollMisCanchas" class="container">
            <table class="table table-hover bg-warning">
                <thead>
                    <tr>
                        <th>Total Reservas: <span style="color: BLUE;">{{cantidadReservas}}</span></th>
                        <th>Asistieron: <span style="color: green;">{{cantidadAsistieron}}</span></th>
                        <th>Faltaron: <span style="color: red;">{{cantidadFallaron}}</span></th>
                        <th>Cancelaron: <span style="color:orangered;">{{cantidadCancelaron}}</span></th>
                        <th>Reservadas: <span style="color:rgb(15, 15, 15);">{{cantidadReservadas}}</span></th>
                    </tr>
                    <tr>
                        <th>NÂº de Cancha</th>
                        <th>Fecha Reservada</th>
                        <th>Hora Reservada</th>
                        <th>Nombre y Apellido</th>
                        <th>Fecha</th>
                        <th>Estado</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each establecimiento}}
                    <tr>
                        <td>{{numeroCancha}}</td>
                        <td>{{fechaReserva}}</td>
                        <td>{{hora}}:00 Hs</td>
                        <td>{{nombre}} {{apellido}}</td>
                        <td>{{fechas fecha}}</td>
                        <td>{{estado}}</td>
                        {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-2  p-4">
            <a id="volver" href="/paginas/reservaEstablecimiento/{{idEstablecimiento}}" type="button" class="btn btn-primary">Volver</a>
        </div>
    </div>
</div>
