<div id="perfil">
    <form action="/paginas/miPerfil/{{user.idUsuarios}}" method="POST" enctype="multipart/form-data">
        <div class="d-flex">
            <div id="semiTransparente" class="col-5 m-auto py-3 px-3 ">
                <div class="card">
                    <div class="card-header">
                        <a href="javascript: history.go(-1)" class="close">&times;</a>
                        <h1 class=" mt-3 text-center py-2">Mi Perfil</h1>
                        
                    </div>
                    
                    {{#with usuario}}
                    <div class="card-body">
                        <div class="col-md-3">
                            <img src="/img/descarga/{{img}}" width="170">
                            <input type="file" name="imagen">
                            <button class="btn btn-success" type="submit">Cargar</button>
                        </div>
                        
                        <i for="nombre"><b>Nombre:</b>{{nombre}}</i>
                        <br>
                        <i for="nombreUsuario"><b>Apellido:</b>{{apellido}}</i>
                        <br>
                        <i for="nombreUsuario"><b>Nombre de Usuario:</b>{{nombreUsuario}}</i>
                        <br>
                        <i for="EmailUsuario"><b>Email:</b>{{email}}</i>
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>
    </form>
    <div style = "float: left" class="col-2  p-4">
        <a id="volver" href="javascript: history.go(-1)" type="button" class="btn btn-danger">Volver</a>
    </div>
</div>