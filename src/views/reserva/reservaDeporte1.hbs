<div id="ticket">
    <div class="container p-5" >
        <div class="row row-cols-2">
            <div class="col-sm-4 py-5" style="background-color: rgb(255, 255, 255, 0.4);">
                <div class="text-center">
                    <h3>Establecimientos</h3>
                    <form action="/paginas/reservaDeporte1/{{deporte}}" method="POST">
                        <label class="mt-3" for="fecha"><b>Elija un dia</b></label>
                        <input id="fecha" type="date" value="09/16/2021" name="fecha" required>
                        {{#each canchas}}
                        <div class="col-md-6 bg-info mb-3">
                            <b> {{nombreEstablecimiento}} <br>
                                numero de la cancha {{numeroCancha}}
                                <input type="radio" name="idCancha" value="{{id}}" required>
                        </div>
                        {{/each}}

                        <button class="btn btn-success" type="submit">Aceptar</button>
                    </form>
                </div>

            </div>
            <div class="col">
                <div class="row justify-content-around">
                    {{#each canchas}}
                    <div class="col">
                        <div class="card bg-secondary">
                            <div class="card-header">
                                {{nombreEstablecimiento}}
                            </div>
                            <div class="card-body">
                                <img src="/img/descarga/{{img}}" alt="" width="250" height="200">
                            </div>
                            <div class="card-footer">
                                Cancha Nro : {{numeroCancha}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <div class="row py-5">
        <div style="float: left" class="col-2 p-5">
            <a id="volver" href="javascript: history.go(-1)" type="button" class="btn btn-danger">Volver</a>
        </div>
    </div>
</div>