<script type="text/javascript">
    function misTurnos(a, b) {
        for (var i = a; i <= b; i++) {
            {{#each reservas }}
            if (i == {{ hora }})
        { document.getElementById("texto").innerHTML += `<div class="col-4 mb-3 m-2 bg-danger"><input type="radio" name="turno" id="" value="${i}" disabled> ${i} Hs</div>`; }
            {{/each}}
                document.getElementById("texto").innerHTML += `<div class="col-4 mb-3 m-2 bg-primary"><input type="radio" name="turno" id="" value="${i}" required> ${i} Hs</div>`;
            }
        }
        var btnTurnos = document.getElementById("botonTurnos");
        var disableButton = function () { this.disabled = true; };
        btnTurnos.addEventListener('click', disableButton, false);
</script>